extends ../layout

block content
    .row
        .col-md-10.col-md-offset-1
                .page-header
                    h3  CarSect
    .row
        .col-md-4.col-md-offset-4
            .panel.panel-default
                .panel-heading
                    h3.panel-title Login
                .panel-body
                    form.form-horizontal(role="form")
                        .form-group
                            label.col-sm-2.control-label(for="email") Email
                            .col-sm-10
                                input.form-control#email(type="email", placeholder="Email")

                        .form-group
                            label.col-sm-2.control-label(for="password") Password
                            .col-sm-10
                                input.form-control#password(type="password", placeholder="Password")
                        .form-group
                            .col-sm-offset2.col-sm-10
                                button.btn.btn-default(type="submit") Sign In