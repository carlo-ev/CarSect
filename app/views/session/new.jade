extends ../layout

block content
    .row
        .col-md-10.col-md-offset-1
                .page-header
                    h3  CarSek
    .row
        .col-md-4.col-md-offset-4
            .panel.panel-default
                .panel-heading
                    h3.panel-title Login
                .panel-body
                    form.form-horizontal(action="/login", method="POST", enctype="multipart/form-data")
                        .form-group
                            label.col-sm-2.control-label(for="email") Email
                            .col-sm-10
                                input.form-control(type="email", placeholder="Email", name="email")

                        .form-group
                            label.col-sm-2.control-label(for="password") Password
                            .col-sm-10
                                input.form-control(type="password", placeholder="Password", name="password")
                        .form-group
                            .col-sm-offset2.col-sm-10
                                button.btn.btn-default(type="submit") Sign In