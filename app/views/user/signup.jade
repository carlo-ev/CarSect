extends ../layout

block content
    .row
        .col-md-10.col-md-offset-1
            .page-header
                h3  CarSek

    .row
        .col-md-4.col-md-offset-4
            .panel.panel-default
                .panel-heading
                    h3.panel-title SignUp
                .panel-body
                    form(action="/signup", method="POST", enctype="multipart/form-data")
                        .form-group
                            label(for="name.first") First Name
                            input(class="form-control", name="name.first", placeholder="Enter First Name")
                        .form-group
                            label(for="name.last") Last Name
                            input(class="form-control", name="name.last", placeholder="Enter Last Name")
                        .form-group
                            label(for="email") Email Address
                            input(type="email", class="form-control", name="email", placeholder="Enter Email")
                        .form-group
                            label(for="password") Password
                            input(type="password", class="form-control", name="password", placeholder="Enter Password")
                        button.btn.btn-default(type="submit") Submit

