extends ../layout

block content
    .row
        .col-md-10.col-md-offset-1
                .page-header
                    h3  CarSek
    .row
        .col-md-4.col-md-offset-4
            .panel.panel-default
                .panel-heading
                    h3.panel-title New Device
                .panel-body
                    form.form-horizontal(action="/devices", method="POST", enctype="multipart/form-data")
                        .form-group
                            label.col-sm-2.control-label(for="title") Device Title
                            .col-sm-10
                                input.form-control( placeholder="Title", name="title")

                        .form-group
                            label.col-sm-2.control-label(for="key") Device Key
                            .col-sm-10
                                input.form-control( placeholder="Device Key", name="key")
                        .form-group
                            label.col-sm-2.control-label(for="email") Email
                            .col-sm-10
                                input.form-control( type="email", placeholder="Email", name="email")
                        .form-group
                            .col-sm-offset2.col-sm-10
                                button.btn.btn-success(type="submit") Register
                                a(href="/dashboard").pull-right
                                    button.btn.btn-default Cancel